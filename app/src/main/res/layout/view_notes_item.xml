<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/view_notes_item_corner_radius"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/view_notes_card_elevation"
    app:contentPadding="@dimen/view_notes_item_padding"
    android:id="@+id/card_view"
    app:cardBackgroundColor="@color/colorGrey">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="text"
        android:textSize="@dimen/view_notes_item_title_text_size" />

</android.support.v7.widget.CardView>